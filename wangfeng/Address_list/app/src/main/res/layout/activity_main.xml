<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.gaoshen.wangfeng.address_list.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xx">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="编辑"
           android:textSize="28sp"
           android:textColor="@color/bai"
           />
        <ImageView
            android:id="@+id/ben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tongxun"
            android:layout_marginLeft="220dp"

            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xingming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text="姓名:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/xm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/xingming"
                android:hint="请输入姓名"
                android:textSize="29sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/shouji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text="手机:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/shouji"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textSize="29sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/qqhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text="QQ:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/qqhao"
                android:hint="请输入QQ号"
                android:inputType="number"
                android:textSize="29sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="90dp"
            android:paddingTop="50dp">

            <Button
                android:id="@+id/quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="25sp"
                android:onClick="main"
                />

            <Button
                android:id="@+id/baocun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:text="保存"
                android:onClick="main"
                android:textSize="25sp"

                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
