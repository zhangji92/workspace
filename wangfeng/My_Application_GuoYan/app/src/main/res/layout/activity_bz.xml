<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gaoshen.wangfeng.my_application_guoyan.Bz">

    <RelativeLayout
        android:id="@+id/biaotou_bz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lang"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imgxxkc_bz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/wang1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgxxkc_bz"
            android:layout_marginTop="10dp"
            android:gravity="center|bottom"
            android:text="@string/bz"
            android:textColor="@color/bai"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/jian_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickText_bz"
            android:padding="10dp"
            android:src="@drawable/jian" />

        <ImageView
            android:id="@+id/caidan_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/caidan" />

    </RelativeLayout>

    <ListView
        android:layout_below="@id/biaotou_bz"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </ListView>
</RelativeLayout>
